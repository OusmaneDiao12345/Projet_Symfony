{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .bg-gray-100 {
            background-color: #f4f4f4; /* couleur de fond pour le corps */
        }

        .bg-white {
            background-color: #fff; /* couleur de fond du formulaire */
        }

        .shadow-md {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .rounded-lg {
            border-radius: 8px; /* arrondir les coins du formulaire */
        }

        .text-2xl {
            font-size: 1.5rem; /* taille du titre */
        }

        .text-center {
            text-align: center; /* centrer le texte */
        }

        .form-input {
            padding: 0.5rem; /* ajout d'un rembourrage à l'input */
            border: 1px solid #ccc; /* bordure gris clair */
            border-radius: 4px; /* arrondir les coins de l'input */
            width: 100%; /* occuper toute la largeur */
            transition: border-color 0.2s ease; /* transition douce pour la couleur de la bordure */
        }

        .form-input:focus {
            border-color: #3b82f6; /* couleur de la bordure au focus */
            outline: none; /* supprimer le contour par défaut */
        }

        .hover\:bg-gray-800:hover {
            background-color: #1f2937; /* couleur du bouton au survol */
        }

        .bg-black {
            background-color: black; /* couleur de fond du bouton */
        }

        .text-white {
            color: white; /* couleur du texte du bouton */
        }

        .font-bold {
            font-weight: bold; /* gras pour le texte */
        }

        .py-2 {
            padding-top: 0.5rem; /* rembourrage vertical du bouton */
            padding-bottom: 0.5rem;
        }

        .px-4 {
            padding-left: 1rem; /* rembourrage horizontal du bouton */
            padding-right: 1rem;
        }

        .rounded {
            border-radius: 4px; /* arrondir les coins du bouton */
        }

        .space-y-4 > :not(:last-child) {
            margin-bottom: 1rem; /* espacement entre les champs du formulaire */
        }
    </style>

    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Ajouter un client</h1>

               {{ form_start(form, {'attr': {'class': 'space-y-4', 'novalidate': 'novalidate'}}) }}
                {% for field in form %}
                    <div class="mb-4">
                        {{ form_label(field) }}
                        {{ form_widget(field, {'attr': {'class': 'form-input block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                        {{ form_errors(field, {'attr': {'class': 'text-red-500 text-sm'}}) }} {# Affiche les erreurs en rouge #}
                    </div>
                {% endfor %}
                
                <div class="flex justify-end">
                    <button type="submit" class="bg-black hover:bg-gray-800 text-white font-bold py-2 px-4 rounded">
                        Ajouter
                    </button>
                </div>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
